<!DOCTYPE html>

<html>
	<head>
		#parse("/org/glass/velocity/widgets/head.vm")
	</head>
	<body>
	    #parse("/org/glass/velocity/widgets/menu.vm")
		
		<h1><span>Logs</span></h1>
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                    #foreach ($log in $logs)
                        <tr>
                            <td>$format.date(${log.date})</td>
                            <td>$format.html($log.message)</td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                #if ($utils.isNotEmpty($log.stackTrace))
                                     <pre>$format.html($log.stackTrace)</pre>
                                #end
                            </td>
                        </tr>
                    #end
                </tbody>
            </table>
        </div>
	</body>
</html>