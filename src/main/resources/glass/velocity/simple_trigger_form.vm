<!DOCTYPE html>

<html>
    <head>
		#parse("/glass/velocity/widgets/head.vm")
	</head>
	<body>
        #parse("/glass/velocity/widgets/menu.vm")

        <h1><span>New simple trigger</span></h1>
        <div class="table">
            <form action="/jobs/$esc.xml($group)/$esc.xml($name)/triggers/$esc.xml($triggerGroup)/$esc.xml($triggerName)/edit-simple" method="POST" >
                <table>
                    <tr>
                        <td>job group :</td>
                        <td>$esc.html($trigger.jobKey.group)</td>
                    </tr>
                    <tr>
                        <td>job name : </td>
                        <td>$esc.html($trigger.jobKey.name)</td>
                    </tr>
                    <tr>
                        <td>group :</td>
                        <td>$esc.html($trigger.key.group)</td>
                    </tr>
                    <tr>
                        <td>name :</td>
                        <td>$esc.html($trigger.key.name)</td>
                    </tr>
                    #springBind("form.startTime")
                    <tr>
                        <td>start time (dd/MM/yyyy HH:mm:ss) :</td>
                        <td>
                            <input type="text" name="startTime" value="$!esc.xml($status.value)" />
                            #if(${status.error}) ${status.errorMessage} #end
                        </td>
                    </tr>
                    #springBind("form.endTime")
                    <tr>
                        <td>end time (dd/MM/yyyy HH:mm:ss) :</td>
                        <td>
                            <input type="text" name="endTime" value="$!esc.xml($status.value)" />
                            #if(${status.error}) ${status.errorMessage} #end
                        </td>
                    </tr>
                    #springBind("form.repeatCount")
                    <tr>
                        <td>repeat count (-1 for no limit) :</td>
                        <td>
                            <input type="text" name="repeatCount" value="$!esc.xml($status.value)" />
                            #if(${status.error}) ${status.errorMessage} #end
                        </td>
                    </tr>
                    #springBind("form.intervalInMilliseconds")
                    <tr>
                        <td>repeat interval (ms)  :</td>
                        <td>
                            <input type="text" name="intervalInMilliseconds" value="$!esc.xml($status.value)" />
                            #if(${status.error}) ${status.errorMessage} #end
                        </td>
                    </tr>
                    #springBind("form.dataMap")
                    <tr>
                        <td>data map :</td>
                        <td><textarea name="dataMap" rows="20" cols="100" >$!esc.html($status.value)</textarea></td>
                    </tr>
                </table>
                <input type="submit" value="update simple trigger"/>
            </form>
        </div>

        #parse("/glass/velocity/widgets/args.vm")
    </body>
</html>
