<h2><span>Jobs arguments</span></h2>
<div class="table">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Sample Values</th>
            </tr>
        </thead>
        <tbody id="arguments-body-id">
            #* If you change this code don't forget to change the javascript part also *#
            #foreach ($argument in $jobArguments)
                <tr>
                    <td style="text-align: center">
                        #if ($argument.required)
                            <span style="font-weight:bold;" >
                                $esc.html($argument.name)*
                            </span>
                        #else
                            $esc.html($argument.name)*
                        #end
                    </td>
                    <td>$esc.html($argument.description)</td>
                    <td>
                        #foreach ($sampleValue in $argument.sampleValues)
                            $esc.html($sampleValue)<br>
                        </c:forEach>
                        #end
                    </c:if></td>
                </tr>
            #end
        </tbody>
    </table>
</div>
